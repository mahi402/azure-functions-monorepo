{
  "name": "kbt-platform",
  "workspaces": [
    "src/*",
    "packages/*"
  ],
  "scripts": {
    "build:api": "turbo run build --filter=src/api/*",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "repos-model": "^0.0.45",
    "turbo": "^2.0.5",
    "@repo/models": "^1.0.0"
  },
  "packageManager": "npm@10.5.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@repo/models": "^1.0.0",
    "repos-model": "^0.0.45"
  }
}
